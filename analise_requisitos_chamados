/****** Script for SelectTopNRows command from SSMS  ******/
SELECT TOP 1000 [menu_id]
      ,[titulo]
      ,[script]
      ,[requer_id]
      ,[entidade]
      ,[menu_pai_id]
  FROM [cerberus_2002].[dbo].[MENU] where script like '%chamados%'
